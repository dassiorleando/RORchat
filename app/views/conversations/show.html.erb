<div class="row">
  <div class="spacer"></div>
  <div class="col-md-6">
    <%= link_to "New Chat", new_conversation_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <div class="spacer"></div>

  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render partial: 'messages' %>
      </div>
      <div class="panel-footer">
        <!-- Reply Form -->
        <%= form_for :message, url: reply_conversation_path(conversation) do |f| %>
            <div class="form-group">
              <%= f.text_area :body, placeholder: "Write Your Message Here", rows: 4, class: "form-control" %>
            </div>
            <%= f.submit "Reply", class: 'btn btn-success pull-right' %>
        <% end %>
        <div class="clearfix"></div>
      </div>
    </div>
  </div>

</div>
<p id="notice"><%= notice %></p>

<h1>Bookmarks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.title %></td>
        <td><%= bookmark.url %></td>
        <td><%= link_to 'Show', bookmark, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_bookmark_path(bookmark), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', bookmark, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!--<%= link_to 'New Bookmark', new_bookmark_path %>-->
<%= link_to new_bookmark_path do %>
    <i class="glyphicon glyphicon-plus"></i>New Bookmark
<% end %>
